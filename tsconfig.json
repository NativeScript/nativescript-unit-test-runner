{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2017",
    "moduleResolution": "node",
    "lib": [
      "es6",
      "dom"
    ],
    "skipLibCheck": true,
    "noImplicitUseStrict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "noEmitOnError": true
  },
  "include": [
    "app/**/*",
    "declarations.d.ts",
    "references.d.ts"
  ],
  "exclude": [
    "node_modules",
    "platforms"
  ]
}
